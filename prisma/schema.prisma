generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  MASTER
  USER
  ADMIN
}

model User {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  phone       String   @unique
  password    String
  role        UserRole @default(USER)
  add_address String?
  rates       Rating[]
  files       Files[]
  profession  String?
  region      String?
  district    String?
  createdAt   DateTime @default(now())

  @@map("users")
}

model Files {
  id        String   @id @default(ulid())
  fileType  String
  fileUrl   String
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("files")
}

model Rating {
  id        Int      @id @default(autoincrement())
  rate      Int
  comment   String
  userId    String
  user      User     @relation(references: [id], fields: [userId])
  createdAt DateTime @default(now())
}
